void keyPressed() {
  // spacebar pressed, then switch debug mode
  if (key == ' ') {
    debug = !debug;
  }
  // otherwise, when the player pressed WASD / arrow keys, update the direction of the pacman
  switch (keyCode) {
  case 87:
    player.set_dir(1);
    break;
  case 83:
    player.set_dir(3);
    break;
  case 65:
    player.set_dir(4);
    break;
  case 68:
    player.set_dir(2);
    break;
  case UP:
    player.set_dir(1);
    break;
  case DOWN:
    player.set_dir(3);
    break;
  case LEFT:
    player.set_dir(4);
    break;
  case RIGHT:
    player.set_dir(2);
    break;
  }
}

